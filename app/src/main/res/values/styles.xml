<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item> <!-- Adjust text size -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Optional: Change font -->
    </style>

    <style name="textStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">none</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="songInfoTextStyle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:ellipsize">none</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="songInfoTextStyleTV">
        <item name="android:textAlignment">textStart</item>
        <item name="android:ellipsize">none</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textColor">#DCD7D7</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="playbackSpeedStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:backgroundTint">#368EDB</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="selectSongsTextStyleTV">
        <item name="android:textColor">#898686</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">none</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

</resources>